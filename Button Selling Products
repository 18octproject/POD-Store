/* Code php */
add_action('woocommerce_after_main_content', 'add_custom_button_to_category_pages', 5);
function add_custom_button_to_category_pages() {
	 echo '<div class="button-sellings-wrapper">
			<a href="https://lustax.com/shop/" class="button-selling-products">
				View Best Sellers
			</a>
		  </div>';
}



/* Code CSS */

